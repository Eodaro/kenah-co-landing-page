---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// This part fetches your posts and defines the 'posts' variable
const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---
<Layout title="Blog | Kenah Field">
  <main class="py-20">
    <header class="text-center mb-12 px-4">
      <h1 class="font-display text-4xl text-heading-blue">Field Notes</h1>
      <p class="mt-4 text-text-secondary">Thoughts, stories, and reflections from the field.</p>
    </header>

    <section class="max-w-3xl mx-auto px-4">
      <ul class="space-y-10">
        {posts.map(post => (
          <li class="border-b border-accent-blue/20 pb-10">
            <a href={`/blog/${post.slug}/`} class="block group">
              <h2 class="font-display text-2xl text-text-primary group-hover:text-accent-blue transition-colors">
                {post.data.title}
              </h2>
            </a>
            <p class="text-sm text-text-secondary mt-2">
              {post.data.pubDate.toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </p>
            <p class="text-text-primary/90 mt-4">
              {post.data.description}
            </p>
          </li>
        ))}
      </ul>
    </section>
  </main>
</Layout>